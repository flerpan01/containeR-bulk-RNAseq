Bootstrap: docker
From: bioconductor/bioconductor_docker:latest

%labels
	Author https://github.com/flerpan01

%environment
	export LC_ALL=C

%post
  # Install less
  apt-get update && apt-get install -y less
  # Clean up apt cache to reduce image size
  apt-get clean
  rm -rf /var/lib/apt/lists/*

# ~~ install R libraries ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ #

# from CRAN
cat << EOF > pkgs-CRAN.txt
ggplot2
gtools
tools
scales
data.table
ggrepel
forcats
RColorBrewer
cowplot
ggsignif
openxlsx
patchwork
EOF

R -e "install.packages(readLines('pkgs-CRAN.txt'))"

# from Bioconductor
cat << EOF > pkgs-Bioc.txt
clusterProfiler
edgeR
DESeq2
tximport
biomaRt
ComplexHeatmap
org.Mm.eg.db
ReactomePA
EOF

R -e "BiocManager::install(readLines('pkgs-Bioc.txt'))"

%runscript
	Rscript "$@"